<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{{ shop.name }} | {{ page_title }}</title>

        {{ 'main.css' | asset_url | stylesheet_tag }}

        {{ 'modernizr.js' | asset_url | script_tag }}

        <link rel="canonical" href="{{ canonical_url }}">

        {{ content_for_header }}
    </head>

    <body class="{{ template | replace: '.', ' ' | truncatewords: 1, '' }} antialiased" id="{{ page_title | handle }}">

        <nav class="top-bar" data-topbar>
            <ul class="title-area">
                <li class="name">
                    <h1><a href="/"><i class="fa fa-home"></i> {{ shop.name }}</a></h1>
                </li>
                <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
            </ul>

            <section class="top-bar-section">
                <ul class="right">
                    {% for link in linklists.main-menu.links %}
                        {% comment %}
                          Create a dropdown menu by naming a linklist the same as a link in the parent nav

                          More info on dropdowns:
                            - http://docs.shopify.com/manual/your-website/navigation/create-drop-down-menu
                        {% endcomment %}
                        {% assign child_list_handle = link.title | handleize %}
                        {% if linklists[child_list_handle] != blank %}
                            <li class="has-dropdown">
                                <a href="{{ link.url }}">{{ link.title }}</a>
                                <ul class="dropdown">
                                    {% for childlink in linklists[child_list_handle].links %}
                                        <li>
                                            <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ link.url }}">{{ link.title }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                    <li class="divider"></li>
                    <li><a href="/cart"><i class="fa fa-shopping-cart"></i> Cart ({{ cart.item_count}})</a></li>
                    {% if cart.item_count > 0 %}
                        <li class="divider"></li>
                        <li class="has-form"><a class="button" href="/checkout"><i class="icon-credit-card"></i> Check Out</a></li>
                    {% endif %}
                </ul>
            </section>
        </nav>

        {% if template == 'list-collections' %}
            {% include 'collection-listing' %}
        {% else %}
            {{ content_for_layout }}
        {% endif %}

        <hr>

        <div class="row">
            <div class="small-4 columns">
                <p>Â© {{ "now" | date: "%Y" }} {{ shop.name }}.</p>
            </div>

            <div class="small-8 columns">
                {% if linklists.footer.links.size > 0 %}
                    <ul class="inline-list right">
                        {% for link in linklists.footer.links %}
                            <li><a href="{{ link.url }}" title="{{ link.title | strip_html }}">{{ link.title }}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>

        {{ 'main.js' | asset_url | script_tag }}

        <script>
            $(document).foundation();
        </script>

    </body>
</html>
